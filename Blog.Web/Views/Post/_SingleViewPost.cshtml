@model SinglePostViewModel
@inject IWebHostEnvironment enviroment
@{
	var convertedPostDate = DateTime.Parse(Model.CreatedOn).ToLocalTime()
	.ToString("dddd, dd MMMM yyyy HH:MM");
}


<div class="row">
	<div class="col-md-6">
		<!-- Box Comment -->
		<div class="card card-widget">
			<div class="card-header">
				<div class="user-block">
					<img class="img-circle" src="~/img/users/@UserDeafultImageAvatar" alt="User Img">
					<span class="username"><a href="#">@Model.UserFullName</a></span>
					<span class="description">Shared publicly - @convertedPostDate</span>
					<div class="mb-3"></div>
				</div>
				<!-- /.user-block -->
				<div class="mb-3"></div>
			</div>
			<!-- /.card-header -->
			<div class="card-body">
				@*	<h5>@this.Model.Title</h5>*@

				<div class="mb-3"></div>

				@foreach (var imageUrl in this.Model.Images)
				{
					<img class="img-fluid pad" src="~/img/posts/@imageUrl" alt="Photo" asp-append-version="true">
				}

				<p>@this.Model.Content</p>

				<button type="button" class="btn btn-default btn-sm"><i class="far fa-thumbs-up"></i> Like</button>
				<span class="float-right text-muted">127 likes - @Model.CommentsCount comments</span>
			</div>
			<!-- /.card-body -->
			<div class="card-footer card-comments">
				<div class="card-comment">
					<!-- User image -->

					<div id="postDiff" class="comment-footer">
						<form id="postComment" method="post">
							<img class="img-fluid img-circle img-sm" src="~/img/users/@UserDeafultImageAvatar" alt="Alt Text">
							<div class="img-push mb-3">
								<input type="text" class="form-control form-control-sm" placeholder="Press enter to post comment">
							</div>
							<button type="submit" class="btn btn-primary">Comment</button>
						</form>
					</div>
					<div class="comment-text">
					</div>
					<!-- /.comment-text -->
				</div>
				<!-- /.card-comment -->
				<!-- /.card-comment -->
				<div class="mb-3"></div>
			</div>
			<div class="mb-3"></div>

			<div class="mb-5"></div>
			<!-- /.card-footer -->
		</div>
		<!-- /.card -->
	</div>
</div>