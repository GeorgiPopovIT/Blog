@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer;
@{
    ViewData["Title"] = localizer["PageTitle"];

    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4" style="color:white">@localizer["PageWelcome"] Blog G&M</h1>

</div>
<div class = "text-center">
    <a asp-area="Identity" asp-page="/Account/Register" class ="btn btn-primary">
        @localizer["CreateAccount"]
    </a>
    <a asp-area="Identity" asp-page="/Account/Login" class = "btn btn-secondary">
        @localizer["ExistAccount"]
    </a>
</div>

@section Scripts{
    <script>
           const body = document.getElementsByTagName('body')[0];

           body.classList.add('backgroundImage');
    </script>
}
