@model CommentViewModel

<div class="card-comment">
	<!-- User image -->
	<img class="img-circle img-sm" src="../dist/img/user4-128x128.jpg" alt="User Image">

	<div class="comment-text">
		<span class="username">
			@Model.UserFullName
			<span class="text-muted float-right">@Model.CreatedOn </span>
		</span>
		@Model.Content
	</div>
	<!-- /.comment-text -->
</div>